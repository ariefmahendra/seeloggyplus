<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.seeloggyplus.controller.LogPreviewDialogController"
            prefWidth="800" prefHeight="600">

    <top>
        <VBox alignment="CENTER_LEFT" spacing="5">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Preview:" style="-fx-font-weight: bold;"/>
            <Label fx:id="fileNameLabel" text="/path/to/some/file.log"/>
        </VBox>
    </top>

    <center>
        <TableView fx:id="logTableView">
            <columns>
                <TableColumn fx:id="lineColumn" text="Line" prefWidth="75"/>
                <TableColumn fx:id="contentColumn" text="Content" prefWidth="700"/>
            </columns>
            <placeholder>
                <VBox alignment="CENTER" spacing="10">
                    <ProgressIndicator fx:id="progressIndicator"/>
                    <Label text="Loading file content..."/>
                </VBox>
            </placeholder>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="closeButton" text="Close" defaultButton="true"/>
        </HBox>
    </bottom>

</BorderPane>
