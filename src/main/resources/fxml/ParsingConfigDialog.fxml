<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.seeloggyplus.controller.ParsingConfigController"
            prefWidth="1000" prefHeight="800" minWidth="900" minHeight="750" styleClass="dialog-pane">

    <!-- Top: Title -->
    <top>
        <VBox styleClass="header-panel">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            <Label text="Parsing Configuration" styleClass="title-label"/>
            <Label text="Create and manage regex patterns with named groups for log parsing" styleClass="subtitle-label"/>
        </VBox>
    </top>

    <!-- Center: Main Content (now scrollable) -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <SplitPane dividerPositions="0.3">
                <BorderPane.margin>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </BorderPane.margin>
                <!-- Left: Configuration List -->
                <VBox spacing="10">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>

                    <Label text="Saved Configurations" styleClass="title-label"/>

                    <ListView fx:id="configListView" VBox.vgrow="ALWAYS"/>

                    <GridPane hgap="5" vgap="5">
                        <Button fx:id="addButton" text="Add" prefWidth="80" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <Button fx:id="editButton" text="Edit" prefWidth="80" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        <Button fx:id="deleteButton" text="Delete" prefWidth="80" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                        <Button fx:id="duplicateButton" text="Duplicate" prefWidth="120" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2"/>
                        <Button fx:id="setDefaultButton" text="Set Default" prefWidth="120" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                    </GridPane>
                </VBox>

                <!-- Right: Configuration Editor and Test -->
                <VBox spacing="15">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>

                    <!-- Configuration Details -->
                    <VBox spacing="10" styleClass="content-box"> <!-- Re-using a generic style -->
                        <padding>
                            <Insets top="15" right="15" bottom="15" left="15"/>
                        </padding>

                        <Label text="Configuration Details" styleClass="title-label"/>

                        <VBox spacing="5">
                            <Label text="Name:"/>
                            <TextField fx:id="nameField" promptText="Enter configuration name"/>
                        </VBox>

                        <VBox spacing="5">
                            <Label text="Description:"/>
                            <TextArea fx:id="descriptionArea" promptText="Enter description (optional)"
                                      prefRowCount="2" wrapText="true"/>
                        </VBox>

                        <VBox spacing="5">
                            <Label text="Regex Pattern (use named groups: (?&lt;name&gt;pattern))"/>
                            <TextArea fx:id="regexPatternArea"
                                      promptText="Example: (?&lt;timestamp&gt;\d{4}-\d{2}-\d{2}\s+\d{2}:\d{2}:\d{2})\s+(?&lt;level&gt;INFO|WARN|ERROR)\s+(?&lt;message&gt;.*)"
                                      prefRowCount="4" wrapText="true"
                                      styleClass="monospace-text"/>
                        </VBox>

                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label fx:id="validationLabel" HBox.hgrow="ALWAYS"/>
                        </HBox>

                        <VBox spacing="5">
                            <Label text="Detected Named Groups (table columns):" styleClass="subtitle-label"/>
                            <ListView fx:id="groupNamesListView" prefHeight="80" maxHeight="100"/>
                        </VBox>
                    </VBox>

                    <!-- Test Parsing Section -->
                    <VBox spacing="10" VBox.vgrow="ALWAYS" styleClass="content-box">
                        <padding>
                            <Insets top="15" right="15" bottom="15" left="15"/>
                        </padding>

                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label text="Test Parsing" styleClass="title-label" HBox.hgrow="ALWAYS"/>
                            <Button fx:id="testParsingButton" text="Test Pattern" defaultButton="true"/>
                        </HBox>

                        <VBox spacing="5">
                            <Label text="Sample Log Line:"/>
                            <TextArea fx:id="sampleLogArea"
                                      promptText="Paste a sample log line here to test your regex pattern..."
                                      prefRowCount="3" wrapText="true"
                                      styleClass="monospace-text"/>
                        </VBox>

                        <VBox spacing="5" VBox.vgrow="ALWAYS">
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <Label text="Parsed Fields Preview:" styleClass="subtitle-label"/>
                                <Label fx:id="testResultLabel" HBox.hgrow="ALWAYS"/>
                            </HBox>

                            <TableView fx:id="previewTableView" VBox.vgrow="ALWAYS" prefHeight="150" minHeight="120">
                                <columns>
                                    <TableColumn fx:id="fieldNameColumn" text="Field Name" prefWidth="150"/>
                                    <TableColumn fx:id="fieldValueColumn" text="Value" prefWidth="300"/>
                                </columns>
                                <placeholder>
                                    <Label text="Test the pattern to see parsed fields here"/>
                                </placeholder>
                            </TableView>
                        </VBox>

                        <VBox spacing="5" styleClass="info-box">
                            <Label text="ðŸ’¡ Tips:" styleClass="subtitle-label"/>
                            <Label text="â€¢ Use named groups syntax: (?&lt;groupName&gt;pattern)" wrapText="true"/>
                            <Label text="â€¢ Group names will become column headers in the log table" wrapText="true"/>
                            <Label text="â€¢ Test your pattern before saving to ensure it works correctly" wrapText="true"/>
                        </VBox>
                    </VBox>
                </VBox>
            </SplitPane>
        </ScrollPane>
    </center>

    <!-- Bottom: Action Buttons -->
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="bottom-bar">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>

            <Button fx:id="saveButton" text="Save" defaultButton="true"/>
            <Button fx:id="applyButton" text="Apply"/>
            <Button fx:id="cancelButton" text="Cancel" cancelButton="true"/>
        </HBox>
    </bottom>

</BorderPane>
